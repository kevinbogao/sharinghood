    "@unocss/postcss": "^0.51.8",
    "@unocss/preset-wind": "^0.51.8",
    "eslint": "^8.39.0",
    "eslint-config-next": "13.3.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-react": "^7.32.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
