    "prisma": "^4.13.0",
    "ts-node": "^10.9.1",
    "unocss": "^0.51.8"
  },
  "engines": {
    "node": "18.x",
    "yarn": "1.x"
  },
  "lint-staged": {
    "*": "prettier --config .prettierrc.json --ignore-unknown --write",
    "package.json": "prettier-package-json --write",
    "*.(js|jsx|ts|tsx)": "eslint --fix"
  },
  "prisma": {
    "schema": "src/lib/db/prisma/schema.prisma"
  }
